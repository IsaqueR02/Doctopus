<Window x:Class="Doctopus.Aplication.Views.RegistroEvolucao"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Doctopus.Aplication.Views"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Registro de Sessão" Height="600" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Window.Resources>
        <!-- Fix for XDG0010: Define PrimaryHueLightBrush if missing -->
        <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#FF2196F3"/>
    </Window.Resources>
    <Grid Margin="20">
        <StackPanel>
            <materialDesign:Card Padding="15" Margin="0,0,0,20" Background="{StaticResource PrimaryHueLightBrush}">
                <StackPanel Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="AccountChild" Width="40" Height="40" VerticalAlignment="Center" Margin="0,0,15,0"/>
                    <StackPanel>
                        <TextBlock Text="Registrando sessão para:" FontSize="12"/>
                        <TextBlock x:Name="lblNomePaciente" Text="NOME DO PACIENTE AQUI" FontSize="20" FontWeight="Bold"/>
                    </StackPanel>
                </StackPanel>
            </materialDesign:Card>

            <ComboBox x:Name="cbProfissional" 
                      materialDesign:HintAssist.Hint="Quem está atendendo hoje?"
                      DisplayMemberPath="NomeCompleto" 
                      SelectedValuePath="Id"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}" Margin="0,0,0,20"/>

            <DatePicker x:Name="dpData" materialDesign:HintAssist.Hint="Data da Sessão" Margin="0,0,0,20"/>
            <TextBox x:Name="txtDescricao"
                     materialDesign:HintAssist.Hint="Descrição da Evolução (O que foi trabalhado?)"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     Height="150" TextWrapping="Wrap" AcceptsReturn="True"
                     VerticalScrollBarVisibility="Auto" Margin="0,0,0,20"/>

            <TextBlock Text="Nível de Participação/Resposta:" FontWeight="Bold" Margin="0,0,0,5"/>
            <Grid Margin="0,0,0,20">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                
                <materialDesign:PackIcon Kind="FaceSad" Grid.Column="0" VerticalAlignment="Center"/>
                <Slider x:Name="sliderNota" Grid.Column="1" Minimum="1" Maximum="5" TickFrequency="1" IsSnapToTickEnabled="True" Margin="10,0"/>
                <materialDesign:PackIcon Kind="Mood" Grid.Column="2" VerticalAlignment="Center"/>
            </Grid>
            <Button Content="FINALIZAR ATENDIMENTO" Click="BtnSalvar_Click" Height="50" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </Grid>
</Window>
