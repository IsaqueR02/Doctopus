<Window x:Class="Doctopus.Aplication.Views.CadastroPaciente"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="Novo Paciente - Doctopus" Height="650" Width="500"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">

    <Window.Resources>
        <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#FF2196F3"/>
    </Window.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="20">

            <TextBlock Text="Cadastro de Paciente" FontSize="24" FontWeight="Bold" Style="{StaticResource MaterialDesignHeadline5TextBlock}" Foreground="{StaticResource PrimaryHueMidBrush}" Margin="0,0,0,20"/>
            <materialDesign:Card Padding="15" Margin="0,0,0,15" UniformCornerRadius="10">
                <StackPanel>
                    <TextBlock Text="👤 Dados Pessoais" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBox x:Name="txtNome" materialDesign:HintAssist.Hint="Nome Completo da Criança" Margin="0,0,0,10" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    <DatePicker x:Name="dpNascimento" materialDesign:HintAssist.Hint="Data de Nascimento" Margin="0,0,0,10" Style="{StaticResource MaterialDesignFloatingHintDatePicker}"/>

                    <TextBox x:Name="txtResponsavel" materialDesign:HintAssist.Hint="Nome do Responsável (Mãe/Pai)" Margin="0,0,0,10" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Padding="15" Margin="0,0,0,15" UniformCornerRadius="10">
                <StackPanel>
                    <TextBlock Text="🏥 Dados Clínicos" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBox x:Name="txtDiagnostico" materialDesign:HintAssist.Hint="Diagnóstico (Ex: TEA Nível 1)" Margin="0,0,0,10" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <TextBox Grid.Column="0" x:Name="txtPlano" materialDesign:HintAssist.Hint="Plano de Saúde" Margin="0,0,5,10" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                        <TextBox Grid.Column="1" x:Name="txtCarteirinha" materialDesign:HintAssist.Hint="Nº Carteirinha" Margin="5,0,0,10" Style="{StaticResource MaterialDesignFloatingHintTextBox}"/>
                    </Grid>
                </StackPanel>
            </materialDesign:Card>

            <materialDesign:Card Padding="15" Margin="0,0,0,15" UniformCornerRadius="10" Background="#FFF8E1">
                <StackPanel>
                    <TextBlock Text="⭐ Perfil de Acolhimento" FontWeight="Bold" Margin="0,0,0,10"/>

                    <TextBox x:Name="txtInteresses" materialDesign:HintAssist.Hint="Hiperfocos/Interesses (Ex: Dinossauros)" 
                             Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto" Margin="0,0,0,10"/>

                    <TextBox x:Name="txtSensibilidade" materialDesign:HintAssist.Hint="Sensibilidades/Evitar (Ex: Barulho alto)" 
                             Height="60" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </materialDesign:Card>

            <Button x:Name="btnSalvar" Content="SALVAR PACIENTE" Click="BtnSalvar_Click" 
                    Height="50" Margin="0,10" Style="{StaticResource MaterialDesignRaisedButton}"/>
        </StackPanel>
    </ScrollViewer>
</Window>